<div class="container">
  <h3>Emails</h3>
  <% if @emails.templates.length == 0 %>
    <p>Oops, no emails found. Run <code>antwort new [name]</code> to create one.</p>
  <% else %>
    <ul class="emails-list">
      <% @emails.templates.each do |template| %>
      <li>
        <a href="<%= template.url %>">
          <%= template.title %>
        </a>
      </li>
      <% end %>
    </ul>
  <% end %>
</div>
