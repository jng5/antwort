guard 'livereload' do
  watch(%r{^.rb})
  watch(%r{^source/emails/.*/(.*)\.(erb)})
  watch(%r{^source/emails/(.*)\.erb})
  watch(%r{^source/views/.*/(.*)\.(erb)})
  watch(%r{^source/views/(.*)\.erb})
  watch(%r{^source/assets/css/.*/(.*)\.(css|scss)})
  watch(%r{^source/assets/css/(.*)\.(css|scss)})
end
